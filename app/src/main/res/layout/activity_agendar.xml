<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agendar">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9ED0FB"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#027DE8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/rajdhani_bold"
                android:gravity="center_vertical"
                android:text="  Olá, Pedro!"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="#FDFCFC"
            android:orientation="horizontal">

            <Button
                android:id="@+id/agendar2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/rajdhani_bold"
                android:paddingBottom="0dp"
                android:onClick="OnClickHomePage"
                android:text="Home Page"
                android:textAlignment="center"
                android:textColor="#027DE8"
                android:textSize="14sp"
                android:textStyle="bold"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/agendar3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/rajdhani_bold"
                android:paddingBottom="0dp"
                android:text="Agendar"
                android:textAlignment="center"
                android:textColor="#FF4204B3"
                android:textSize="14sp"
                android:textStyle="bold"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/Agendar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/rajdhani_bold"
                android:paddingBottom="0dp"
                android:onClick="OnClickAgendamentos"
                android:text="Agendamentos"
                android:textAlignment="center"
                android:textColor="#027DE8"
                android:textSize="14sp"
                android:textStyle="bold"
                app:iconPadding="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BEDBF4"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha o serviço desejado:"
                android:fontFamily="@font/rajdhani_bold"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                ></TextView>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                ></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha a unidade desejada:"
                android:fontFamily="@font/rajdhani_bold"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                ></TextView>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                ></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha a data desejada:"
                android:fontFamily="@font/rajdhani_bold"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                ></TextView>




        </LinearLayout>>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>